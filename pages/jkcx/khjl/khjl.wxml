<!--pages/yqcx/value/value.wxml-->
<view class="container">

  <view class='title'>
    <text>其它信息</text>
  </view>

  <view class="value">
    <view class='line' bindtap='bindPhone'>
      <view class='key'>
        <text>手机号码</text>
      </view>
      <view class='item'>
        <text>{{staff.phone_number}}</text>
      </view>
      <view class='icon' >
        <image src='/public/image/boda.png'></image>
      </view>
    </view>
    <view class='line'>
      <view class='key'>
        <text>身份证</text>
      </view>
      <view class='item'>
        <text>{{staff.idcard}}</text>
      </view>
    </view>
  </view>

  <view class='title'>
    <text>详细住址(点击导航)</text>
  </view>
  
  <view class='value address' bindtap='bindAddress'>
    <text>{{staff.address}}</text>
  </view>

</view>
