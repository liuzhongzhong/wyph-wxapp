/* pages/main/main.wxss */

.banner {
  width:750rpx;
  height:356rpx; 
  background-color: #5BB0EA;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.banner view text {
  color: white;
  font-size: 28rpx;
}

.header-image {
  width:140rpx;
  height:140rpx; 
  border-radius: 100%;
}

.line {
  width:750rpx;
  height:70rpx; 
  background:rgba(240,240,240,1);
  display: flex;
  align-items: center;
}

.line text {
  font-size:28rpx;
  color: #333;
  padding-left: 20rpx;
}

.button-line {
  width: 750rpx;
  height: 232rpx;
   border-bottom: 1rpx solid #f0f0f0; 
  display: flex;
  flex-direction: row;
}

.button-line view{
  width: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #f0f0f0;
  
}

.button-line image {
  width: 60rpx;
  height: 60rpx;
}

.button-line text {
  padding-top: 15rpx;
  color: #333;
  font-size: 28rpx;
}