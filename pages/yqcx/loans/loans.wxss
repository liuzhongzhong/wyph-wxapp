/* pages/yqcx/loans/loans.wxss */

page {
  background-color: #efeff4;
}

.title {
  height: 80rpx;
  display: flex;
}

.title text {
  padding-top: 30rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #888;
}

.value {
  width:750rpx;
  background-color: #FFF;
  border-top: 1rpx solid #E5E5E5;
}

.line {
  width:750rpx;
  height:120rpx; 
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #E5E5E5;
}


.more {
  display: flex;
  align-items: center;
}


.more image {
  width: 30rpx;
  height: 40rpx;
}

.info {
  width:650rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;

}

.main {
  font-size: 34rpx;
  color: #333;
}

.sub {
  font-size: 26rpx;
  color: #b2b2b2;
}