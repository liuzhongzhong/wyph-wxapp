  background:rgba(246,246,246,1);
  display:flex;
  justify-content: center;
  flex-direction: column;
}

.first-view{
  margin-left: 30rpx;
}

.first-view text{
  font-size: 28rpx;
  color: #333333;
}

.second-view{
margin-left: 30rpx;
margin-top: -10rpx; 
